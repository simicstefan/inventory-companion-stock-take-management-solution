@model Popis.Models.Prijava
@{
    ViewBag.Title = @Lokalizacija.Languages.langres.Prijava;
}
<br />
<h2>@Lokalizacija.Languages.langres.PrijavaNaAplikaciju</h2>

@using (Html.BeginForm("Prijava", "Prijava"))
{

    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />


    <div style=" margin-left:30%">
        <img src="~/Content/stock-take-logo.png" width="35%" height="35%" style="text-align:center" alt="User image">
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.prijava.IDKartica, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.prijava.IDKartica, new { htmlAttributes = new { @class = "form-control", autofocus = true } })

            @Html.ValidationMessageFor(model => model.prijava.IDKartica, "", new { @class = "font-italic text-danger" })

            @Html.ValidationSummary(true, "", new { @class = "font-italic text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.prijava.IDProjekat, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.prijava.IDProjekat, Model.ListaProjekata, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.prijava.IDZona, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.prijava.IDZona, Model.ListaZona, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Lokalizacija.Languages.langres.Prijava class="btn btn-dark btn-lg btn-block">
            </div>
        </div>


    </div>
</div>
    }

    <script src='@Url.Content("~/Scripts/jquery-1.8.2.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
